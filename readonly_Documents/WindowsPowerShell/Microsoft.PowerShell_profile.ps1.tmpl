if (Test-Path Alias:ls) { Remove-Item Alias:ls -Force }
function ls { eza --group-directories-first --icons @args }
function l { ls --long --git --color-scale=all --time-style=relative @args }
function la { l --all @args }
function ll { l --octal-permissions --group --header --time-style=long-iso @args }
function lla { ll --all @args }
function lt { ls --tree --level=2 @args }

Invoke-Expression (&starship init powershell)
