# oh-my-zsh
export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="robbyrussell"
HYPHEN_INSENSITIVE="true"
ENABLE_CORRECTION="true"
plugins=(
  git
  fzf-tab
  zsh-syntax-highlighting
  zsh-autosuggestions
)

. "$ZSH/oh-my-zsh.sh"

# lsd alias
alias ls="lsd --group-directories-first"
alias l="ls -l"
alias la="ls -a"
alias lla="ls -la"
alias lt="ls --tree"

# nvim
export EDITOR="nvim"
alias vim="nvim"

# load swiftly environment
. "$HOME/.swiftly/env.sh"

